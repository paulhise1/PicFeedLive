<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Users"
        android:textSize="35sp"
        android:id="@+id/textView4"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_user_sign_in"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Users"
        android:textSize="35sp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a user name."
        android:textSize="25sp"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edit_text_username_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_create_user_login"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_below="@+id/edit_text_username_input"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
