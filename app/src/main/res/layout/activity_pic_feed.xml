<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bar_top_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView_username"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_alignBaseline="@+id/button_create_post"
            android:layout_alignBottom="@+id/button_create_post"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_create_post" />

        <Button
            android:id="@+id/button_create_post"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/picfeed_activity_post_button"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button_logout" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/picfeed_activity_logout_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/picfeed_activity_top_text"
        android:layout_below="@+id/bar_top_menu"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/list_pic_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_feed"/>

</RelativeLayout>
