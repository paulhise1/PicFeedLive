<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bar_top_menu"
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_create_post"
            android:text="@string/picfeed_activity_top_text" />

        <Button
            android:id="@+id/button_create_post"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/button_logout"
            android:text="@string/picfeed_activity_post_button" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:text="@string/picfeed_activity_logout_button" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_pic_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_top_menu"/>

</RelativeLayout>
